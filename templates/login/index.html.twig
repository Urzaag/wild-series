{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email : </label>
        <input type="text" id="username" name="_username" value="{{ last_username }}">

        <label for="password">Mot de passe : </label>
        <input type="password" id="password" name="_password">
        <a href="{{ path('app_forgot_password_request') }}">Reset your password</a>

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="/index/">

        {# CSSRF protection, field must be called _csrf_token and the string used to generate the value must be authenticate #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit">Login</button>
    </form>
