{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        {# <img class="align-self-start mr-3" src="{{ asset(program.poster) }}" alt="{{ program.title }} poster"> #}
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <ul>
                {% for seasons in program.seasons %}
                    <li>
                        <h4>{{ loop.index }} / saison {{ seasons.number }} de {{ program.title }}</h4>
                        <a href="{{ path('program_season_show', { programId: program.id, seasonId: seasons.id }) }}">Voir la fiche</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}